<section class="section">
  <div class="container">
    <h1 class="title">
      <%= @post.title %>
    </h1>
    <div class="content">
      <%= @post.content %>
    </div>
    <div class="d-flex m-3">
      <%= link_to "Edit Post", edit_post_path(@post), class: "btn btn-warning" %>
      <%= button_to "Delete Post", post_path(@post), method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
</section>